<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">


        <LinearLayout
            android:id="@+id/OsigCol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/lblPoslodavac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poslodavac:"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/lblOpstina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OpÅ¡tina:"
                />
            <TextView
                android:id="@+id/lblAdresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresa:"
                />

            <TextView
                android:id="@+id/lblZajednica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zajednica:"
                />

            <TextView
                android:id="@+id/lblRegBr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reg.broj:"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/OsigCol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/lblRadMjesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rad.Mjesto:"
                />

            <TextView
                android:id="@+id/lblDatumOd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datum od:"
                android:textColor="@color/colorAccent"
                />
            <TextView
                android:id="@+id/lblDatumDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DatumDo:"
                android:textColor="@color/colorAccent"
                />

            <CheckBox
                android:id="@+id/cbxValid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Valid"/>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>