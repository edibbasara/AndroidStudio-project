<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/lblNazivLijeka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Naziv lijeka: "
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/lblVrstaLijeka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vrsta lijeka: "
        android:layout_below="@id/lblNazivLijeka"/>

    <TextView
        android:id="@+id/lblUpotreba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upotreba lijeka: "
        android:layout_below="@id/lblVrstaLijeka"
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>
</android.support.constraint.ConstraintLayout>