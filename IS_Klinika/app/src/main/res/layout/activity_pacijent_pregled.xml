<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".area_pacijent.pacijentPregled">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/lblPregled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pregled:"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"/>

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/lblOpis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opis bolesti:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/lblPregled"/>

    <TextView
        android:id="@+id/lblHistorija"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Historija bolesti:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/lblOpis"/>

    <TextView
        android:id="@+id/lblDijagnoza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dijagnoza:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/lblHistorija"/>

    <TextView
        android:id="@+id/lblDijagnozaOpis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorAccent"
        android:layout_below="@id/lblDijagnoza"
        android:padding="10dp"/>

</RelativeLayout>

</android.support.constraint.ConstraintLayout>